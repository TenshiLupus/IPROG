<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.clients.HelloController">

    <ImageView fx:id="ImageContainer" fitHeight="400" fitWidth="400"></ImageView>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeTex"/>
    <Button text="Select image to send" onAction="#sendImage"/>
    <Button text="start listening for incoming images" onAction="#startListening"/>
</VBox>
